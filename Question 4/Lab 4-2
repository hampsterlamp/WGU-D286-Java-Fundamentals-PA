import java.util.Scanner;

public class LabProgram {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);        
      /* Type your code here. */
      String[] x = new String[3];
      for (int i = 0; i < 3; i++) {
         x[i] = scnr.nextLine();
      }
      System.out.println(x[0] + " is " + x[1] + " and makes $" + x[2] + ".");
   }
}
